@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="row justify-content-center">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.Input?.ProfilePictureUrl != null)
            {
                <div class="mb-3">
                    <img src="@Model.Input.ProfilePictureUrl" alt="Profilna slika" width="100" class="img-thumbnail" />
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3"> <input asp-for="Input.BirthDate" class="form-control" placeholder="Unesite datum rođenja" /> <label asp-for="Input.BirthDate">Datum rođenja</label> <span asp-validation-for="Input.BirthDate" class="text-danger"></span> </div>

            <div class="form-floating mb-3"> <input asp-for="Input.ProfilePictureUrl" class="form-control" placeholder="Unesite URL slike" /> <label asp-for="Input.ProfilePictureUrl">URL profilne slike</label> <span asp-validation-for="Input.ProfilePictureUrl" class="text-danger"></span> </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
