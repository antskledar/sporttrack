@page
@model FavoritesModel

<h2>Your Favorites</h2>
@if (Model.Favorites.Count == 0)
{
    <p>You have no favorite teams.</p>
}
else
{
    <ul>
        @foreach (var fav in Model.Favorites)
        {
            <li>
                @fav.Team.Name (@fav.Team.Sport.Name)
                <form method="post" asp-page-handler="RemoveFavorite" asp-route-favoriteId="@fav.Id" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </li>
        }
    </ul>
}
<a asp-page="/Sports">Back to Sports</a>
