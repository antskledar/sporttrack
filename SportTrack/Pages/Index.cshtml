@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.SportEvent[0].Date)</th>
                <th>@Html.DisplayNameFor(model => model.SportEvent[0].Sport)</th>
                <th>Match</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SportEvent)
            {
                <tr>
                    <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.Sport.Name</td>
                    <td>
                        @item.HomeTeam.Name
                        <span style="background-color: #f0f0f0; border-radius: 8px; padding: 4px 10px; font-weight: bold; margin: 0 8px;">
                            @item.HomeScore&nbsp;:&nbsp;@item.AwayScore
                        </span>
                        @item.AwayTeam.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
